{
    "manifest_version": 3,
    "name": "Cheap Wish",
    "description": "Extension pour cr√©er une wishlist Vinted",
    "version": "1.0",
    "action": {
      "default_icon": "img/icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "downloads"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.vinted.fr/member/items/favourite_list"],
        "js": ["js/popup.js", "js/app.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "128": "img/icon_128.png"
    },
    "background": {
      "service_worker": "js/background.js"
    }
  }
  